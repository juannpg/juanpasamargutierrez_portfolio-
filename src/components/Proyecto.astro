---
const { titulo, descripcion, imagen, github, despliege } = Astro.props;
import githubIcon from '../assets/github-icon-black.webp';
import despliegueIcon from '../assets/despliegue-icon.webp';
---
<div class="flex flex-col lg:flex-row gap-5 md:rounded-lg bg-[var(--item-bg)] p-4 md:p-2 relative items-center border-b border-[var(--white)] last:border-none md:border-none">
  <img src={imagen} alt="Icono" class="rounded-md shadow-sm shadow-gray-950"/>
  <div class="w-full md:items-start items-center flex flex-col gap-3 text-left">
    <h2 class="text-[var(--white)] text-3xl">{titulo}</h2>
    <p class="text-[var(--subtitle-2)] text-md">{descripcion}</p>

    <div class="flex flex-wrap gap-2 md:bottom-2">
      <a href={github} class="h-11 w-35 flex flex-row gap-1 items-center bg-[var(--white)] p-2 rounded-lg cursor-pointer" rel="noopener" target="_blank">
        <img src={githubIcon.src} alt="Icono" class="h-5 mr-2"/>
        Repositorio
      </a>
      <a href={despliege} class="h-11 w-35 flex flex-row gap-1 items-center bg-[var(--star-blue)] p-2 rounded-lg cursor-pointer" rel="noopener" target="_blank">
        <img src={despliegueIcon.src} alt="Icono" class="h-5 mr-2"/>
        Despliegue
      </a>
    </div>
  </div>
</div>  