---
const { nombre, icono, subtitulo, repositorio }  = Astro.props;
import githubIcon from '/src/assets/github-icon-black.webp'
---

<div class="w-full relative flex flex-row gap-2 items-center md:rounded-lg bg-gray-800 p-4 md:p-2 border-b border-white last:border-none md:border-none">
  <img src={icono} alt="Icono" class="rounded-md h-18"/>
  <div class="flex flex-row items-center text-left">
    <div>
      <h2 class="text-white text-2xl">{nombre}</h2>
      <p class="text-gray-400 text-sm">{subtitulo}</p>
    </div>
    {repositorio && <a href={repositorio} class="absolute right-2 h-11 flex flex-row gap-1 items-center bg-white shadow-sm shadow-white p-2 rounded-lg cursor-pointer" rel="noopener" target="_blank">
      <img src={githubIcon.src} alt="Icono" class="h-5"/>
      <span class="hidden lg:inline">Repositorio</span>
    </a>}
  </div>
</div>
