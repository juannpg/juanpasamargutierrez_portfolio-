---
const { nombre, icono, subtitulo, repositorio }  = Astro.props;
import githubIcon from '/src/assets/github-icon-black.webp'
---

<div class="w-full relative flex flex-row gap-2 items-center md:rounded-lg bg-[var(--item-bg)] p-4 md:p-2 border-b border-[var(--white)] last:border-none md:border-none">
  <img src={icono} alt="Icono" class="h-14 bg-[var(--icon-bg)] rounded-sm"/>
  <div class="flex flex-row items-center text-left">
    <div>
      <h2 class="text-[var(--white)] text-2xl">{nombre}</h2>
      <p class="text-[var(--subtitle-1)] text-sm">{subtitulo}</p>
    </div>
    {repositorio && <a href={repositorio} class="absolute md:right-2 right-4 h-11 flex flex-row gap-1 items-center bg-[var(--white)] p-2 rounded-lg cursor-pointer" rel="noopener" target="_blank">
      <img src={githubIcon.src} alt="Icono" class="h-5"/>
      <span class="hidden lg:inline">Repositorio</span>
    </a>}
  </div>
</div>
