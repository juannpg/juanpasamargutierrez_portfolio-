---
const { orientacion, titulo, lugar, fechaInicio, fechaFin, icono }  = Astro.props;

const flexDirection = orientacion == 0 ? 'flex-row' : 'flex-row-reverse';
const textAlign = orientacion == 0 ? 'text-left' : 'text-right';
---

<div class={`md:w-[35vw] h-22 flex ${flexDirection} gap-2 rounded-lg bg-gray-700 p-2`}>
  <img src={`/src/assets/${icono}`} alt="Icono" class="h-full rounded-md"/>
  <div class={`flex flex-col justify-center ${textAlign}`}>
    <h2 class="text-white text-xl">{titulo}</h2>
    <p class="text-gray-400 text-md">{lugar}</p>
    <p class="text-gray-300 text-md">{fechaInicio} - {fechaFin}</p>
  </div>
</div>
