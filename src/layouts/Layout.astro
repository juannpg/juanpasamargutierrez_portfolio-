---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta name="description" content="Portfolio de Juan Pasamar, desarrollador web con tecnologías modernas. Conoce mis proyectos y habilidades como desarrollador frontend y backend." />
    <meta name="keywords" content="desarrollador web, desarrollador frontend, desarrollador backend, portfolio de desarrollador, programación web, React.js, Node.js, desarrollo web, desarrollo de aplicaciones web, diseño web responsivo, UX/UI, programación freelance, desarrollo de ecommerce, creación de sitios web, desarrollo web a medida, desarrollador full stack, programación JavaScript, bases de datos SQL, bases de datos NoSQL, juanpasamargutiererz, juan, pasamar, gutierrez, juanpasamar" />
    <link rel="canonical" href="https://www.juanpasamargutierrez.dev/" />
    <meta name="author" content="Juan Pasamar Gutierrez" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="alternate" href="https://www.juanpasamargutierrez.dev/" hreflang="x-default" />
    <link rel="alternate" href="https://www.juanpasamargutierrez.dev" hreflang="en" />
    <link rel="alternate" href="https://www.juanpasamargutierrez.dev/es/" hreflang="es" />
    <link rel="alternate" href="https://www.juanpasamargutierrez.dev/fr/" hreflang="fr" />
    <link rel="alternate" href="https://www.juanpasamargutierrez.dev/de/" hreflang="de" />

		<title>Juan Pasamar Gutierrez</title>
    <Analytics />
    <SpeedInsights />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
  @font-face {
    font-family: 'prototype';
    src: url(/src/fonts/Prototype.ttf);
  }
  
	html,
	body {
		margin: 0;
		width: 100%;
    height: 100%;
    overflow-x: hidden;
    display: flex;
    gap: 5vh;
    flex-direction: column;
    align-items: center;
    background-color: var(--background-color);
    text-align: center;
    font-family: prototype;
	}
</style>
