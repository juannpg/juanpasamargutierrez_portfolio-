---
import Item from '../components/Item.astro';
import dawIcon from '../assets/daw-icon.webp';
import bachiIcon from '../assets/bachi-icon.webp';
import esoIcon from '../assets/eso-icon.webp';
---
<section class="w-full flex flex-col md:text-left md:gap-2">
  <h1 class="text-[var(--white)] text-4xl ml-4 md:ml-0 mb-[5vh] md:mb-0">Estudios</h1>
  <div class="flex flex-col md:gap-2">
    <Item titulo="GS. Desarrollo de Aplicaciones Web" lugar="CPIFP Los Enlaces" fechaInicio="2024" fechaFin="2026" icono={dawIcon.src}/>
    <Item titulo="Bachillerato científico y tecnológico" lugar="IES Ángel Sanz Briz" fechaInicio="2022" fechaFin="2024" icono={bachiIcon.src}/>
    <Item titulo="Educación Secundaria Obligatoria" lugar="IES Ángel Sanz Briz" fechaInicio="2018" fechaFin="2022" icono={esoIcon.src}/>
  </div>
</section>