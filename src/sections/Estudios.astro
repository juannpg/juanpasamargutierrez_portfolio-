---
import Item from '../components/Item.astro';
import dawIcon from '../assets/daw-icon.webp';
import bachiIcon from '../assets/bachi-icon.webp';
import esoIcon from '../assets/eso-icon.webp';

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="w-full flex flex-col text-center md:text-left md:gap-2">
  <h2 class="text-[var(--white)] text-3xl md:text-4xl ml-4 md:ml-0 mb-[5vh] md:mb-0">{t('estudios.titulo')}</h2>
  <div class="flex flex-col md:gap-2">
    <Item titulo={t('estudios.primero.titulo')} lugar={t('estudios.primero.lugar')} fechaInicio={t('estudios.primero.fechaInicio')} fechaFin={t('estudios.primero.fechaFin')} icono={dawIcon.src}/>
    <Item titulo={t('estudios.segundo.titulo')} lugar={t('estudios.segundo.lugar')} fechaInicio={t('estudios.segundo.fechaInicio')} fechaFin={t('estudios.segundo.fechaFin')} icono={bachiIcon.src}/>
    <Item titulo={t('estudios.tercero.titulo')} lugar={t('estudios.tercero.lugar')} fechaInicio={t('estudios.tercero.fechaInicio')} fechaFin={t('estudios.tercero.fechaFin')} icono={esoIcon.src}/>
  </div>
</section>