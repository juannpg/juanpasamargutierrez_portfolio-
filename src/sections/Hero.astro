---
import linkedinWhite from '../assets/linkedin-icon-white.svg';
import linkedinBlack from '../assets/linkedin-icon-black.svg';
import githubWhite from '../assets/github-icon-white.svg';
import githubBlack from '../assets/github-icon-black.svg';
import Mail from '../components/Mail.tsx';

import LanguagePicker from '../components/LanguagePicker.tsx';

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="p-10 pb-0 w-[87vw] gap-3 flex flex-col items-center">
  <h1 class="text-[var(--white)] text-6xl md:text-7xl">JUAN PASAMAR GUTIÃ‰RREZ</h1>
  <h2 class="text-[var(--subtitle-1)] text-2xl md:text-3xl">{t('hero.subtitulo')}</h2>

  <div class="flex flex-row justify-center items-center gap-2">
    <a href="https://www.linkedin.com/in/juan-pasamar-guti%C3%A9rrez-273b4b335/" rel="noopener" target="_blank">
      <picture>
        <source srcset={linkedinWhite.src} media="(prefers-color-scheme: dark)" />
        <img src={linkedinBlack.src} alt="Linkedin Icon" class="w-11"/>
      </picture>
    </a>

    <Mail client:load MailTitulo={t('mail.titulo')}/>

    <a href="https://github.com/juannpg" rel="noopener" target="_blank">
      <picture>
        <source srcset={githubWhite.src} media="(prefers-color-scheme: dark)" />
        <img src={githubBlack.src} alt="Github Icon" class="w-11"/>
      </picture>
    </a>
  </div>
  <!-- UI done with v0.dev -->
  <LanguagePicker client:load/>
</section>
