---
import Item from '../components/Item.astro';
import missing from '../assets/missing-icon.webp';

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="w-full flex flex-col md:text-left md:gap-2">
  <h1 class="text-[var(--white)] text-3xl md:text-4xl ml-4 md:ml-0 mb-[5vh] md:mb-0 md:mt-0 mt-[5vh]">{t('experiencia.titulo')}</h1>
  <div class="flex flex-col gap-2">
    <Item titulo={t('experiencia.primero.titulo')} lugar={t('experiencia.primero.lugar')} fechaInicio={t('experiencia.primero.fechaInicio')} fechaFin={t('experiencia.primero.fechaFin')} icono={missing.src}/>
  </div>
</section>